{
  "name": "CV Matcher",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/cvmatcher"
  },
  "postStartCommand": "chmod +x /workspaces/cvmatcher/.devcontainer/start-services.sh; /workspaces/cvmatcher/.devcontainer/start-services.sh",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy" // Python Debugging
      ]
    }
  }
}